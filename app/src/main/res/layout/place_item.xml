<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/place_item_check"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/unselected"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/place_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:elevation="3dp">

        <TextView
            android:id="@+id/place_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/place_item_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/place_item_location" />

        <TextView
            android:id="@+id/place_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_below="@id/place_item_location"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/place_item_province" />

        <TextView
            android:id="@+id/place_item_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_item_province"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/place_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_item_province"
            android:layout_toEndOf="@id/place_item_week"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/place_item_temp"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textSize="40sp"
            android:layout_toStartOf="@id/temp_sign"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/temp_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Â°"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/place_item_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/place_item_temp" />

        <TextView
            android:id="@+id/place_item_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_item_temp"
            android:layout_marginEnd="10dp"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</FrameLayout>