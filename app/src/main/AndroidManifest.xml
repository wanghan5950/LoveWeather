<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wanghanpc.loveweather">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/love_weather_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/WelcomeTheme">
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="Vo4Q5qjl9EGpzcnTZK6sob5GYaLE3aX1" />
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlacesActivity"
            android:theme="@style/AppTheme" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />

        <activity
            android:name=".SettingActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SearchActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MapActivity"
            android:theme="@style/AppTheme" />

        <service
            android:name=".service.AutoUpdateInformationService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".AboutActivity"
            android:theme="@style/AppTheme" />

        <service
            android:name=".service.NotificationService"
            android:enabled="true"
            android:exported="true">

        </service>

        <activity android:name=".BaseActivity">

        </activity>
    </application>

</manifest>